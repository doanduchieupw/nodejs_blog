<div class='mt-3'>
    <div class='row'>

        {{#each courses}}
            <div class='col-sm-6 col-lg-3'>
                <div class='card mt-1'>
                    <a href='/courses/{{this.slug}}'>
                        <img
                            src='{{this.img}}'
                            class='card-img-top'
                            alt='{{this.name}}'
                        />
                    </a>
                    <div class='card-body'>
                        <a href='/courses/{{this.slug}}' style='text-decoration: none'>
                            <h5 class='card-title'>{{this.name}}</h5>
                        </a>
                        <p class='card-text'>{{this.desc}}</p>
                        <a href='#' class='btn btn-primary'>Buy</a>
                    </div>
                </div>
            </div>
        {{/each}}

    </div>
</div>